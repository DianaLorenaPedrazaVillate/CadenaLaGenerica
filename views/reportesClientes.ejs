<%- include('./template/cabecera', {titulow: "Reportes" }); %>
<br>
<div class="container"> 
    <h2>Reporte de clientes de la tienda</h2>       
    <table class="table table-hover shadow" style="border-collapse: separate;">
        <thead>
            <tr align="center" class="table-active">
                
                <th scope="col">Cedula</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">email</th>
                <th scope="col">Celular</th>                
            </tr>
        </thead>

        <tbody>
            <% if (arrayDBloc.length> 0) { %>
                <% arrayDBloc.forEach(reporte=> {%>
                    <tr align="center">
                        
                        <td>
                            <%= reporte.cedula_cliente %>
                        </td>
                        <td>
                            <%= reporte.nombre_cliente %>
                        </td>
                        <td>
                            <%= reporte.direccion_cliente %>
                        </td>
                        <td>
                            <%= reporte.email_cliente %>
                        </td>
                        <td>
                            <%= reporte.telefono_cliente %>
                        </td>    
                    </tr>

                    <% }) %>
                <% } %>
        </tbody>
    </table>
    <a href="/reportes" class="btn btn-success btn-sm">Volver a Reportes</a>
</div>


<%- include('./template/footer'); %>