<%- include('./template/cabecera', {titulow: "Ventas" }); %>

    <br><br>
    <h1 align="center" class="text-muted">Ventas</h1>
    <br>
    <div class="container">
        <a class="btn btn-outline-success btn-block" href="/ventas/crearVenta">Generar Venta</a>
        <br><br>
        <table class="table table-hover shadow" style="border-collapse: separate;">

            <thead>
                <tr align="center" class="table-active">
                    
                    <th scope="col">Cedula cliente</th>
                    <th scope="col">CÃ³digo Venta</th>
                    <th scope="col">Detalle Venta</th>
                    <th scope="col">IVA Venta</th>
                    <th scope="col">Total Venta</th>
                    <th scope="col">Valor Venta</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>

            <tbody>
                                
                <% if (arrayDBloc.length> 0) { %>
                    <% arrayDBloc.forEach(venta=> {%>
                        <tr align="center">
                            
                            <td>
                                <%= venta.cedula_cliente %>
                            </td>
                            <td>
                                <%= venta.codigo_venta %>
                            </td>
                            <td>
                                <%= venta.detalle_venta %>
                            </td>
                            <td>
                                <%= venta.ivaventa %>
                            </td>
                            <td>
                                <%= venta.total_venta %>
                            </td>
                            <td>
                                <%= venta.valor_venta %>
                            </td>
                            <td>
                                <button type="button" title="Editar / Eliminar" class="btn btn-outline-warning"><a href="/ventas/<%= venta.id %>" style="color: #fa9847;"><i class="fas fa-user-edit"></i></a></button>

                            </td>
                            
                        </tr>

                        <% }) %>
                            <% } %>
            </tbody>
        </table>
    </div>

    

    <%- include('./template/footer'); %>