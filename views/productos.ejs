<% /* NOMBRE DEL DATO TIPO DE DATO LONGITUD código_producto BIGINT 20 nombre_producto VARCHAR 50 nitproveedor BIGINT 20
    precio_compra DOUBLE ivacompra DOUBLE precio_venta DOUBLE */%>
    <%- include('./template/cabecera', {titulow: "Productos" }); %>

        <br><br>
        <h1 align="center" class="text-muted">Lista de Productos</h1>
        <br>
        <div class="container">
            <a class="btn btn-outline-success" href="/productos/crearProducto">Agregar Un Producto</a>
            <button type="button" class="btn btn-outline-primary">Agregar Lista de Producto</button>
            <br><br>
            <table class="table table-hover shadow" style="border-collapse: separate;">
                <thead>
                    <tr align="center" class="table-active">
                        
                        <th scope="col" >Código del Producto</th>
                        <th scope="col" >Producto</th>
                        <th scope="col" >NIT Proveedor</th>
                        <th scope="col" >Precio de Compra</th>
                        <th scope="col" >IVA del producto</th>
                        <th scope="col" >Precio de Venta</th>
                        <th scope="col" >Acciones</th>
                    </tr>
                </thead>

                <tbody >
                    <% if (arrayDBloc.length> 0) { %>
                        <% arrayDBloc.forEach(producto=>{%>
                            <tr align="center">
                                
                                <td>
                                    <%= producto.codigo_producto %>
                                </td>
                                <td>
                                    <%= producto.nombre_producto %>
                                </td>
                                <td>
                                    <%= producto.nitproveedor %>
                                </td>
                                <td>
                                    <%= producto.precio_compra %>
                                </td>
                                <td>
                                    <%= producto.ivacompra %>
                                </td>
                                <td>
                                    <%= producto.precio_venta %>
                                </td>
                                <td>
                                    <button type="button" title="Editar / Eliminar" class="btn btn-outline-warning"><a href="/productos/<%= producto.id %>" style="color: #fa9847;"><i class="fas fa-user-edit"></i></a></button>
                                </td>
                            </tr>

                        <% }) %>

                    <% } %>
                </tbody>
            </table>
        </div>

        
    
<%- include('./template/footer'); %>